<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign-up</title>
    <%- include('./partials/daisyui.ejs') %> <%-
    include('./partials/formStyle.ejs') %>
  </head>
  <body>
    <form
      class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-6"
      method="post"
      action="/sign-up"
    >
      <div class="heading">
        <h2>Sign-up</h2>
      </div>
      <label class="label">Username</label>
      <input type="text" class="input" placeholder="Username" name="username" />
      <label class="label">Email</label>
      <input type="email" class="input" placeholder="Email" name="email" />

      <label class="label">Password</label>
      <input
        type="password"
        class="input"
        placeholder="Password"
        name="password"
      />
      <label class="label">Location</label>
      <input type="text" class="input" placeholder="Location" name="location" />

      <button class="btn btn-neutral mt-4" type="submit">Sign-up</button>
      <a href="/login">Login</a>
    </form>
    <%- include('./partials/errorHandle.ejs') %>
  </body>
</html>
