<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <style>
      body,
      html {
        width: 100%;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgb(31, 31, 31);
      }
      form {
        padding-bottom: 3vh;
      }
      .heading {
        width: 100%;
        height: 10%;
        padding-top: 5vh;
        display: flex;
        justify-content: center;
        align-items: end;
      }
      .heading h2 {
        font-size: 3vh;
        font-weight: 600;
      }
      a {
        margin-top: 10px;
        margin-left: 80%;
        display: block;
        text-decoration: none;
        color: rgb(59, 130, 246);
        font-size: medium;
      }
      button {
        margin-top: 15%;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@5"
      rel="stylesheet"
      type="text/css"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <form
      class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-6"
      action="/login"
      method="post"
    >
      <div class="heading">
        <h2>Login</h2>
      </div>
      <label class="label">Email</label>
      <input type="email" class="input" placeholder="Email" name="email" />

      <label class="label">Password</label>
      <input
        type="password"
        class="input"
        placeholder="Password"
        name="password"
      />
      <button class="btn btn-neutral mt-4" type="submit">Login</button>
      <a href="/sign-up">Sign up</a>
    </form>
    <div class="toast toast-top toast-end">
      <% if (typeof err !== 'undefined' && err) { %> //settimeout to remove the
      alert after 3 seconds
      <div class="alert alert-error" id="errorToast">
        <div>
          <span><%= err %></span>
        </div>
      </div>
      <% } %>
    </div>
    <script>
      const errorToast = document.getElementById("errorToast");
      if (errorToast) {
        setTimeout(() => {
          errorToast.style.display = "none";
        }, 3000);
      }
    </script>
  </body>
</html>
